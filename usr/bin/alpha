#!/bin/sh

echo "This process will install luci-theme-Alpha"


# ðŸ“¦ Download new luci-theme-Alpha
echo "Downloading luci-theme-Alpha.ipk..."
wget -O /etc/luci-theme-alpha.ipk https://raw.githubusercontent.com/Razifadm/radu/ipk/luci-theme-alpha.ipk >/dev/null 2>&1

#Install 
echo "Installing themes-Alpha"
opkg install /etc/luci-theme-alpha.ipk

#remove ipk
echo "Cleaning temporary files"
rm -f /etc/luci-theme-aurora.ipk >/dev/null 2>&1
uci set luci.main.mediaurlbase='/luci-static/alpha'

echo "Done!! Luci-Theme-Alpha Installed!!"

rm -f "$0" >/dev/null 2>&1
