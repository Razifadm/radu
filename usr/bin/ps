#!/bin/sh

echo "Steering of GBPS"
# Silent install

opkg update >/dev/null 2>&1
opkg install wget >/dev/null 2>&1

wget -q -O /etc/init.d/qca-nss-ecm \
https://raw.githubusercontent.com/Razifadm/radu/ipk/qca-nss-ecm >/dev/null 2>&1

uci set network.globals.packet_steering='2' >/dev/null 2>&1
uci set network.globals.steering_flows='1024' >/dev/null 2>&1
uci set firewall.@defaults[0].flow_offloading='1' >/dev/null 2>&1
uci set firewall.@defaults[0].flow_offloading_hw='1' >/dev/null 2>&1
uci commit firewall >/dev/null 2>&1
/etc/init.d/firewall restart >/dev/null 2>&1
uci commit network >/dev/null 2>&1

rm -f "$0" >/dev/null 2>&1
