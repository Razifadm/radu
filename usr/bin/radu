#!/bin/sh

echo "This process will install luci-app-netstats"

#remove var lock
rm -f /var/lock/opkg.lock

#Skrip Uninstall something2 apps
#update software list
opkg update
echo "Updating software list"

echo "removing vnstat2 package"
#remove pekej vnstat2
opkg remove --force-depends --autoremove vnstat2
opkg remove --force-depends --autoremove vnstati2
opkg remove --force-depends --autoremove luci-app-vnstat2

#remove var lock 2nd step if opkg remove fail
rm -f /var/lock/opkg.lock

#download ipk netstat

echo "downloading luci-app-netstat.ipk"
wget -O /etc/luci-app-netstat.ipk \
https://raw.githubusercontent.com/Razifadm/radu/ipk/luci-app-netstat.ipk

echo "Installing netstat....."
opkg install /etc/luci-app-netstat.ipk

#buang ipk dari folder tuk jimat spaces
rm -f /etc/luci-app-netstat.ipk

echo "Done!!luci-app-netstat Installed"
rm -f "$0"
